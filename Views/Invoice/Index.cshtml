@model IEnumerable<Visionet.Models.InvoiceCheckResult>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice Integrity Check</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .valid { background-color: #e8ffe8; }
        .invalid { background-color: #ffe5e5; }
        .table-fixed { table-layout: fixed; word-wrap: break-word; }
    </style>
</head>
<body class="p-4">
    <div class="container">
        <h2>Invoice Integrity Check</h2>
        <p>Menampilkan semua invoice: System Total vs Calculated Total dari InvoiceDetail</p>

        <div class="mb-3">
            <button id="btnRefresh" class="btn btn-primary">Refresh / Validate</button>
        </div>

        <table class="table table-bordered table-fixed" id="invoiceTable">
            <thead class="table-light">
                <tr>
                    <th style="width: 25%;">InvoiceID</th>
                    <th style="width: 25%;">System Total</th>
                    <th style="width: 25%;">Calculated Total</th>
                    <th style="width: 25%;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var css = item.Status == "Valid" ? "valid" : "invalid";
                    <tr class="@css">
                        <td>@item.InvoiceID</td>
                        <td>@item.SystemTotal.ToString("N0")</td>
                        <td>@item.CalculatedTotal.ToString("N0")</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $('#btnRefresh').on('click', function () {
            $.get('@Url.Action("ValidateAll", "Invoice")', function (data) {
                var tbody = $('#invoiceTable tbody');
                tbody.empty();
                data.forEach(function (row) {
                    var css = row.status === 'Valid' ? 'valid' : 'invalid';
                    var tr = '<tr class="' + css + '">' +
                        '<td>' + row.invoiceID + '</td>' +
                        '<td>' + Number(row.systemTotal).toLocaleString() + '</td>' +
                        '<td>' + Number(row.calculatedTotal).toLocaleString() + '</td>' +
                        '<td>' + row.status + '</td>' +
                        '</tr>';
                    tbody.append(tr);
                });
            });
        });
    </script>
</body>
</html>
